<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboard_fragment">

    <fragment
        android:id="@+id/dashboard_fragment"
        android:name="com.example.smartagro.ui.dashboard.DashboardFragment"
        android:label="Dashboard"
        tools:layout="@layout/fragment_dashboard">
        <action
            android:id="@+id/action_dashboard_to_charts"
            app:destination="@id/charts_fragment" />
        <action
            android:id="@+id/action_dashboard_to_irrigation"
            app:destination="@id/irrigation_fragment" />
    </fragment>

    <fragment
        android:id="@+id/charts_fragment"
        android:name="com.example.smartagro.ui.charts.ChartsFragment"
        android:label="Charts"
        tools:layout="@layout/fragment_charts">
        <action
            android:id="@+id/action_charts_to_dashboard"
            app:destination="@id/dashboard_fragment" />
        <action
            android:id="@+id/action_charts_to_irrigation"
            app:destination="@id/irrigation_fragment" />
    </fragment>

    <fragment
        android:id="@+id/irrigation_fragment"
        android:name="com.example.smartagro.ui.irrigation.IrrigationFragment"
        android:label="Irrigation"
        tools:layout="@layout/fragment_irrigation">
        <action
            android:id="@+id/action_irrigation_to_dashboard"
            app:destination="@id/dashboard_fragment" />
        <action
            android:id="@+id/action_irrigation_to_charts"
            app:destination="@id/charts_fragment" />
    </fragment>

</navigation>
